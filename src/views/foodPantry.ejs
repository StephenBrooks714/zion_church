<!doctype html>
<html lang="en">
<%- include('layouts/head') -%>
<body>
<header>
    <%- include('layouts/navBar') -%>
</header>

<main>
    <section class="container" style="margin-top: 140px; margin-bottom: 70px;">
        <div class="row justify-content-center align-items-center">
            <div class="col-12 mb-4">
                <h1>AME Food Pantry Page</h1>
            </div>
            <% if(foodItem != "") { %>

                <% for(i=0; i < foodItem.length; i++)  { %>
                    <div class="row align-items-center">
                        <div class="col-md-4 mb-3">
                            <h4>
                                <%= foodItem[i].title %>
                            </h4>
                            <small>Posted On: <%= foodItem[i].datePosted.toLocaleString() %></small>

                            <img src="<%= foodItem[i].imageUrl %>" class="img-fluid w-100 h-100" alt="<%= foodItem[i].title %>">
                        </div>
                        <div class="col-md-8 mb-3">
                            <p>
                                Beginning @ <%= foodItem[i].startTime %> to <%= foodItem[i].endTime %> <br>
                                from <%= foodItem[i].startDate %> to <%= foodItem[i].endDate %>
                            <address>
                                <%= foodItem[i].location %>
                            </address>
                            </p>
                            <p class="text-muted">
                                <%= foodItem[i].description %>
                            </p>
                            <p>
                              <strong>Email Contact:</strong>  <%= foodItem[i].contactName %> @ <%= foodItem[i].contactEmail %>
                            </p>
                            <% if(loggedIn) { %>
                                <a href="/delete/food/<%= foodItem[i]._id %>" class="btn btn-sm btn-warning">delete food item</a>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            <% } else { %>
                <p class="lead fw-bold">There are no events posted yet.</p>
            <% } %>
        </div>
    </section>
</main>

<!-- MDB -->
<%- include('layouts/footer') -%>
</body>
</html>